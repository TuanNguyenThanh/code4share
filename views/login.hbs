 <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js" ></script>

<form class="form-signin" method="post">
	<script>
		$(document).ready(function(){
			$('#email').blur(function(){
				if($(this).val() == ""){
					alert("You have to fill full your info");
				}
			});
			$('#pass').blur(function(){
				if($(this).val() == ""){
					alert("You have to fill full your info");
				}
			});
		});
	</script>
	<div id="err"></div>
	<h2 class="form-signin-heading text-center">Please Sign In</h2>
	<br/>
	<input id ="email" type="email" name="email" class="form-control" placeholder="Email" require="" autofocus="">
	<br/>
	<input id="pass" type="password" name="password" class="form-control" placeholder="Password" require="" >
	<br/>
	<button name="sign" type="submit" class="btn btn-lg btn-primary btn-block" >Sign In</button>
	<br>
	<h4 class="text-center">Or</h4>
	<br>
	<a href="/auth/facebook" class="btn btn-lg btn-success btn-block">Sign In With Facebook</a>
</form>
